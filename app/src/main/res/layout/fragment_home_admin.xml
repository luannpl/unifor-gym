<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabeçalho de Boas-vindas -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bem vindo, Roninson"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"/>

        <!-- Seção Suas Aulas do Dia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUAS AULAS DO DIA"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Linha para Zumba -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Zumba"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 - 09:50"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Linha para Jiu-jitsu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jiu-jitsu"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00 - 15:00"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seção Total de Usuários -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total de Usuários"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvTotalUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.230"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+300 no último mês"
                    android:textSize="12sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seção Aparelhos Cadastrados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aparelhos cadastrados"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvTotalEquipments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="102"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+30 no último mês"
                    android:textSize="12sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seção Total de Aulas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total de Aulas"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvTotalClasses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+7 no último mês"
                    android:textSize="12sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seção Aulas mais populares -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aulas mais populares"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"/>

                <!-- Zumba Bar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zumba"
                    android:textColor="@android:color/black"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="100"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#4285F4"
                    android:layout_marginBottom="8dp"/>

                <!-- Crossfit Bar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crossfit"
                    android:textColor="@android:color/black"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="85"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#4285F4"
                    android:layout_marginBottom="8dp"/>

                <!-- Yoga Bar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga"
                    android:textColor="@android:color/black"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="70"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#4285F4"
                    android:layout_marginBottom="8dp"/>

                <!-- Spinning Bar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spinning"
                    android:textColor="@android:color/black"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="60"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#4285F4"
                    android:layout_marginBottom="8dp"/>

                <!-- Boxe Bar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boxe"
                    android:textColor="@android:color/black"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="50"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#4285F4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Espaço para a navegação inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
</ScrollView>