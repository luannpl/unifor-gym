<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Conteúdo principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome do exercício -->
            <TextView
                android:id="@+id/txtNomeExercicioGestao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supino"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Detalhes do exercício - dificuldade e grupo muscular -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Dificuldade (com cor) -->
                <TextView
                    android:id="@+id/txtDificuldadeExercicioGestao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediário"
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <!-- Grupo muscular -->
                <TextView
                    android:id="@+id/txtGrupoMuscularExercicioGestao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peito"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botão de menu (agora com ícone horizontal) -->
        <ImageView
            android:id="@+id/btnMenuExercicioGestao"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_dots_horizontal"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</androidx.cardview.widget.CardView>