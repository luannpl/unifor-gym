<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="16dp">

        <!-- Ícone com letra -->
        <TextView
            android:id="@+id/iconLetterExercicio"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="S"
            android:textStyle="bold"
            android:textColor="#A259FF"
            android:textSize="20sp"
            android:paddingVertical="24dp"
            android:background="@drawable/bg_icon_circle" />

        <!-- Conteúdo central -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeExercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supino Reto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222222" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Nível (chip) -->
                <TextView
                    android:id="@+id/txtNivelExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciante"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#008000"
                    android:background="@drawable/bg_icon_circle"
                    android:layout_marginEnd="8dp"/>

                <!-- Grupo muscular -->
                <TextView
                    android:id="@+id/txtGrupoMuscularExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peito"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botão de opções -->
        <ImageView
            android:id="@+id/btnMoreItemExercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_horizontal"
            android:contentDescription="Menu"
            app:tint="#888888" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
