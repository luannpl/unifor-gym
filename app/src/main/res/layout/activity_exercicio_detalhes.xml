<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Barra superior com título e botão de voltar -->
    <RelativeLayout
        android:id="@+id/topBarExercicioDetalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnVoltarExercicioDetalhes"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTituloExercicioDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supino Reto"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Conteúdo principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Demonstração (Vídeo) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demonstração"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray">

                    <ImageView
                        android:id="@+id/imgPlayVideo"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_background"
                        android:padding="16dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dificuldade -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dificuldade:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txtDificuldadeExercicioDetalhes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediário"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Instruções -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instruções:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtInstrucoesExercicioDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed et tellus mauris. Suspendisse potenti. Nullam et sapien risit. Proin ut leo et dui semper pulvinar."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Equipamentos necessários -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipamentos necessários:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/containerEquipamentosDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Banco de supino"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Barra"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Anilhas"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Categorias -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categorias"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/containerCategoriasDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Peito"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Braços"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Ombros"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chat flutuante (ícone de chat) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabChatDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:src="@android:drawable/ic_dialog_email"
                android:backgroundTint="@color/green"
                app:tint="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>