<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Título da página com estilo melhorado -->
    <TextView
        android:id="@+id/txtTituloTreinos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Treinos"
        android:textColor="#212121"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:fontFamily="sans-serif-medium" />

    <!-- ScrollView para os cards de grupos musculares -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtTituloTreinos"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Card de Treino de Peito - Design refinado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPeito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cabeçalho do Card com design melhorado -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#03A9F4"
                        android:padding="12dp"
                        android:text="PEITO"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold" />

                    <!-- Lista de Exercícios -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPeito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Treino de Costa - Design refinado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCosta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cabeçalho do Card com design melhorado -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#03A9F4"
                        android:padding="12dp"
                        android:text="COSTA"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold" />

                    <!-- Lista de Exercícios -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerCosta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card de Treino de Perna - Design refinado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPerna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cabeçalho do Card com design melhorado -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#03A9F4"
                        android:padding="12dp"
                        android:text="PERNA"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold" />

                    <!-- Lista de Exercícios -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPerna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Removida a barra de navegação inferior que estava duplicada -->

</RelativeLayout>