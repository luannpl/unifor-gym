<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header com título e botão -->
    <LinearLayout
        android:id="@+id/layoutHeaderUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloUsuarios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuários"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Botão Adicionar Usuário (estilo do botão de exercícios) -->
        <Button
            android:id="@+id/btnAdicionarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar usuário"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />
    </LinearLayout>

    <!-- Campo de busca -->
    <LinearLayout
        android:id="@+id/layoutBuscaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/borda_edittext"
        android:padding="8dp"
        android:layout_below="@id/layoutHeaderUsuarios"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/edtBuscarUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar usuário"
            android:background="@android:color/transparent"
            android:inputType="text" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutBuscaUsuario" />

</RelativeLayout>