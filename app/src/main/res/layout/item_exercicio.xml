<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#CCCCCC"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNomeExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supino"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtNivelExercicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediário"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGrupoMuscularExercicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center_vertical|center_horizontal"
                android:text="Peito"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btnMoreItemExercicio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/more_horizontal"
                android:layout_gravity="center_vertical"
                android:contentDescription="Mais opções" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>